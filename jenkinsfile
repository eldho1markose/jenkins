pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'hello-world-python'
        DOCKER_TAG = 'latest'
        FTP_SERVER = 'ftp://your-ftp-server'
        FTP_USER = 'your-ftp-username'
        FTP_PASSWORD = 'your-ftp-password'
        FTP_PATH = '/path/to/upload'
    }

    stages {
        stage('Git Pull') {
            steps {
                git branch: 'main', url: 'https://github.com/eldho1markose/jenkins.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'python3 hello.py' // Runs Python script
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Docker Save') {
            steps {
                script {
                    sh "docker save -o ${DOCKER_IMAGE}.tar ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }

        stage('FTP Upload') {
            steps {
                script {
                    sh "curl -T ${DOCKER_IMAGE}.tar -u ${FTP_USER}:${FTP_PASSWORD} ${FTP_SERVER}${FTP_PATH}/${DOCKER_IMAGE}.tar"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}